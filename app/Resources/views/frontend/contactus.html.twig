{% extends 'layout.html.twig' %}
{% block stylesheets %}
  {{ parent() }}
  <link rel="stylesheet" href="{{ asset('build/contact.style.css') }}" />
{% endblock %}

{% block body %}
  {% include 'frontend/_hero.html.twig' with {
  'icon': 'bundles/app/images/contacticn.png',
  'icon_alt': 'Contact HBCP Header Icon',
  'header': 'Contact Us',
  'text': header_text
  } %}

  <section class="contact-us-section">
    <div class="container">
      <div class="row">
        <div class="col-md-6 col-md-offset-3 col-sm-12 col-xs-12 news-img">
          <h2><img src="{{ asset('bundles/app/images/contact-mailinglist.svg') }}"></h2>
          <h2>Mailing List</h2>
          <p>{{ 'contact.mailing_list'|trans }}</p>
          <a href="#" class="btn contact-btn">Sign Up</a>

        </div>
      </div>
    </div>
  </section>

  <section class="contact-us-section">
    <div class="container">
      <div class="row">
        <div class="col-md-6 col-md-offset-3 col-sm-12 col-xs-12 news-img">

          <h2><img src="{{ asset('bundles/app/images/contact-twitter.svg') }}"></h2>
          <h2>Twitter</h2>
          <p>{{ 'contact.twitter'|trans }}</p>
          <a href="#" class="btn contact-btn">Visit Twitter Profile</a>

        </div>
      </div>
    </div>
  </section>

  <section class="contact-us-section">
    <div class="container">
      <div class="row">
        <div class="col-md-6 col-md-offset-3 col-sm-12 col-xs-12 news-img">
          <h2><img src="{{ asset('bundles/app/images/contact-openscience.png') }}"></h2>
          <h2>Open Science Framework</h2>
          <p>{{ 'contact.open_science'|trans }}</p>
          <a href="#" class="btn contact-btn">Visit Open Science Framework</a>
        </div>
      </div>
    </div>
  </section>

  <section class="contact-us-section">
    <div class="container">
      <div class="row">
        <div class="col-md-6 col-md-offset-3 col-sm-12 col-xs-12 news-img">
          <h2><img src="{{ asset('bundles/app/images/contact-researchgate.png') }}"></h2>
          <h2>Research Gate</h2>
          <p>{{ 'contact.research_gate'|trans }}</p>
          <a href="#" class="btn contact-btn">Visit Research Gate</a>
        </div>
      </div>
    </div>
  </section>

  <section class="contact-us-section">
    <div class="container">
      <div class="row">
        <div class="col-md-6 col-md-offset-3 col-sm-12 col-xs-12 news-img">
          <h2><img src="{{ asset('bundles/app/images/contact-linkedin.svg') }}"></h2>
          <h2>Linked In</h2>
          <p>{{ 'contact.linkedin'|trans }}</p>
          <a href="#" class="btn contact-btn">Visit LinkedIn Profile</a>
        </div>
      </div>
    </div>
  </section>

  <section class="contact-us-section">
    <div class="container">
      <div class="row">
        <div class="col-md-6 col-md-offset-3 col-sm-12 col-xs-12 news-img">
          <h2><img src="{{ asset('bundles/app/images/contact-email.svg') }}"></h2>
          <h2>Email</h2>
          <p>{{ 'contact.email'|trans|raw|nl2br }}</p>
        </div>
      </div>
    </div>
  </section>
{% endblock %}