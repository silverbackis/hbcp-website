{% extends 'layout.html.twig' %}

{% import _self as team %}

{% macro member(key) %}
  {% set prefix = 'grant_holders.' ~ key ~ '.' %}
  {% include 'frontend/_teamMember.html.twig' with {
  image: (prefix ~ 'image')|trans,
  image_alt: (prefix ~ 'name')|trans ~ ' ' ~ (prefix ~ 'institution')|trans,
  header: (prefix ~ 'name')|trans,
  sub_header: (prefix ~ 'institution')|trans,
  website: (prefix ~ 'link')|trans,
  description: (prefix ~ 'description')|trans,
  key: key
  } %}
{% endmacro %}

{% block stylesheets %}
  {{ parent() }}
  <link rel="stylesheet" href="{{ asset('build/team.style.css') }}"/>
{% endblock %}

{% block body %}
  {% include 'frontend/_hero.html.twig' with {
  'icon': 'bundles/app/images/team-white.svg',
  'icon_alt': 'Project Team Header Icon',
  'header': 'Project Team'
  } %}
  {% include 'frontend/_teamTabs.twig' %}
  {{ team.member('susan') }}
  {{ team.member('james') }}
  {{ team.member('john') }}
  {{ team.member('pol') }}
  {{ team.member('marie') }}
  {{ team.member('mike') }}
  {{ team.member('robert') }}
{% endblock %}
