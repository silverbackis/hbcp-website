<section class="project-team-section">
  <div class="container">
    <div class="row">
      <div class="col-md-3 col-sm-3 col-xs-12 team-member">
        {% if image|default('') != '' %}
          <img src="{{ asset('/bundles/app/images/' ~ image) }}" alt="{{ image_alt }}">
        {% endif %}
      </div>
      <div class="col-md-9 col-sm-9 col-xs-12 member-detail">
        <h2>{{ header }}</h2>
        <p class="sub-heading">{{ sub_header }}</p>
        {% if website|default('') != '' %}
        <a class="website-link" href="{{ website }}" target="_blank" rel="noopener">Visit Website</a>
        {% endif %}
        <div class="member-description collapse" id="team-description-{{ key }}">
          {{ description|nl2br }}
        </div>
        <button class="read-more" data-toggle="collapse" data-target="#team-description-{{ key }}"></button>
      </div>
    </div>
  </div>
</section>