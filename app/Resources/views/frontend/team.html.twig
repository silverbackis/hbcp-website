{% extends 'layout.html.twig' %}

{% import _self as team %}

{% macro member(key) %}
  {% set prefix = 'project_team.' ~ key ~ '.' %}
  {% include 'frontend/_teamMember.html.twig' with {
  image: (prefix ~ 'image')|trans,
  image_alt: (prefix ~ 'name')|trans ~ ' ' ~ (prefix ~ 'role')|trans,
  header: (prefix ~ 'name')|trans,
  sub_header: (prefix ~ 'role')|trans,
  website: (prefix ~ 'link')|trans,
  description: (prefix ~ 'description')|trans,
  key: key
  } %}
{% endmacro %}

{% block stylesheets %}
  {{ parent() }}
  <link rel="stylesheet" href="{{ asset('build/team.style.css') }}"/>
{% endblock %}

{% block body %}
  {% include 'frontend/_hero.html.twig' with {
  'icon': 'bundles/app/images/white.png',
  'icon_alt': 'Grant Holders and Project Team Header Icon',
  'header': 'Grant Holders and Project Team',
  'text': 'project_team.description'|trans
  } %}

  {{ team.member('susan') }}
  {{ team.member('james') }}
  {{ team.member('john') }}
  {{ team.member('pol') }}
  {{ team.member('marie') }}
  {{ team.member('mike') }}
  {{ team.member('robert') }}
  {{ team.member('niccola') }}
{% endblock %}
