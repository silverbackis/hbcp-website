{% import _self as team %}

{% macro member(key) %}
  {% set prefix = 'project_team.' ~ key ~ '.' %}
  {% include 'frontend/_teamMember.html.twig' with {
  image: (prefix ~ 'image')|trans,
  image_alt: (prefix ~ 'name')|trans ~ ' ' ~ (prefix ~ 'institution')|trans,
  header: (prefix ~ 'name')|trans,
  sub_header: (prefix ~ 'institution')|trans,
  website: (prefix ~ 'link')|trans,
  description: (prefix ~ 'description')|trans,
  key: key
  } %}
{% endmacro %}

{% block stylesheets %}
