{% set currentPath = path(app.request.attributes.get('_route'),
app.request.attributes.get('_route_params')) %}
<!DOCTYPE html>
<html {{ sonata_seo_html_attributes() }}>
<head {{ sonata_seo_head_attributes() }}>
  <title>{% block title %}{{ bwbase_title() }}{% endblock %}</title>
  {{ sonata_seo_link_canonical() }}
  {{ sonata_seo_lang_alternates() }}
  {% block metas %}{{ bwbase_meta_tags() }}{% endblock %}
  {% block link_tags %}{{ bwbase_link_tags() }}{% endblock %}
  {% block js_sdk_head %}{{ bwbase_sdks_html('head') }}{% endblock %}
  <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700,900" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css?family=Roboto+Condensed:400,700" rel="stylesheet">
  {% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('build/global.style.css') }}" />
  {% endblock %}
</head>
<body>
{% block js_sdk_body %}{{ bwbase_sdks_html('body') }}{% endblock %}
<div class="container-fluid container-website">
  <header class="header">
    <nav class="index-header navbar " id="main-navbar">
      <div class="container-fluid">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-collapse">
            <ul class="list-inline">
              <li>
                <img src="{{ asset('bundles/app/images/mob-menu.svg') }}" class="black-m" alt="Mobile menu hamburger icon">
                <img src="{{ asset('bundles/app/images/mob-menu-on.svg') }}" class="blue-m" alt="Mobile menu hamburger icon selected">
              </li>
              <li><span class="">Menu</span></li>
            </ul>
          </button>
          <a href="{{ url('homepage') }}" class="navbar-brand smooth-scroll">
            <img src="{{ asset('bundles/app/images/logo.svg') }}" class="logo_height" alt="HBCP - Human Behaviour Change Project Logo"/>
          </a>
        </div>
        <div class="collapse navbar-collapse" id="navbar-collapse">
          <ul class="nav navbar-nav navbar-right hbcpmenu">
            <li{% if currentPath == path('behavioural_science') %} class="active"{% endif %}><a href="{{ path('behavioural_science') }}">Behavioural Science</a></li>
            <li{% if currentPath == category_path('computer science') %} class="active"{% endif %}><a href="{{ category_path('computer science') }}">Computer Science</a></li>
            <li{% if currentPath == category_path('system architecture') %} class="active"{% endif %}><a href="{{ category_path('system architecture') }}">System Architecture</a></li>
            <li{% if currentPath == path('resources') %} class="active"{% endif %}><a href="{{ path('resources') }}">All Resources</a></li>
          </ul>
        </div>
      </div>
    </nav>
  </header>
  {% block body %}{% endblock %}
  <section class="block contact text-center">
    <div class="container">
      <div class="row">
        <div class="contact-block">
          <div class="icon">
            <img src="{{ asset('bundles/app/images/contacticon.svg') }}" alt="Contact Icon">
          </div>
          <h2>Contact Us</h2>
          <p>We use range of social and media networks to keep our stakeholders, investigators and those interested in the project up-to-date with developments. You can contact us through any of these networks and also sign up to our mailing list.</p>
          <a href="{{ path('contactus') }}" class="btn">Contact</a>
        </div>
      </div>
    </div>
  </section>
  <footer class="footer">
    <ul class="text-center footer-links list-inline">
      <li><a href="{{ path('projecteam') }}">Grant Holders & Project Team</a></li>
      <li><a href="{{ path('latestnews') }}">Latest News</a></li>
      <li><a href="{{ path('contactus') }}">Contact</a></li>
    </ul>
    <div class="container-fluid bottom-footer">
      <div class="row">
        <div class="col-sm-4 col-xs-5">&copy; {{ 'now'|date('Y') }} HBCP</div>
        <div class="col-sm-4 col-xs-2 text-center"><a href="#"><img src="{{ asset('bundles/app/images/footer-twitter.svg') }}" alt="Twitter Logo"></a></div>
        <div class="col-sm-4 col-xs-5 text-right">Site by British Websites</div>
      </div>
    </div>
  </footer>
</div>
{% block javascript %}
  <script src="{{ asset('build/global.scripts.js') }}" type="text/javascript"></script>
{% endblock %}
</body>
</html>
