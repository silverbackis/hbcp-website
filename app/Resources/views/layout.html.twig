{% set currentPath = path(app.request.attributes.get('_route'),
  app.request.attributes.get('_route_params')) %}
<!DOCTYPE html>
<html {{ sonata_seo_html_attributes() }}>
<head {{ sonata_seo_head_attributes() }}>
  <title>{% block title %}{{ bwbase_title() }}{% endblock %}</title>
  {{ sonata_seo_link_canonical() }}
  {{ sonata_seo_lang_alternates() }}
  {% block metas %}{{ bwbase_meta_tags() }}{% endblock %}
  {% block link_tags %}{{ bwbase_link_tags() }}{% endblock %}
  {% block js_sdk_head %}{{ bwbase_sdks_html('head') }}{% endblock %}
  <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700,900" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css?family=Roboto+Condensed:400,700" rel="stylesheet">
  {% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('build/global.style.css') }}"/>
  {% endblock %}
</head>
<body>
{% block js_sdk_body %}{{ bwbase_sdks_html('body') }}{% endblock %}
<div class="container-fluid container-website">
  <header class="header">
    <nav class="index-header navbar " id="main-navbar">
      <div class="container-fluid">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-collapse">
            <ul class="list-inline">
              <li>
                <img src="{{ asset('bundles/app/images/mob-menu.svg') }}" class="black-m" alt="Mobile menu hamburger icon">
                <img src="{{ asset('bundles/app/images/mob-menu-on.svg') }}" class="blue-m" alt="Mobile menu hamburger icon selected">
              </li>
              <li><span class="">Menu</span></li>
            </ul>
          </button>
          <a href="{{ url('homepage') }}" class="navbar-brand smooth-scroll">
            <img src="{{ asset('bundles/app/images/logo.svg') }}" class="logo_height" alt="HBCP - Human Behaviour Change Project Logo"/>
          </a>
        </div>
        <div class="collapse navbar-collapse" id="navbar-collapse">
          <ul class="nav navbar-nav navbar-right hbcpmenu">
            <li class="dropdown">
              <a href="#"
                 class="dropdown-toggle"
                 data-toggle="dropdown"
                 role="button"
                 aria-haspopup="true"
                 aria-expanded="false"
              >The Project <span class="caret"></span></a>
              <ul class="dropdown-menu">
                <li{% if currentPath == path('about') %} class="active"{% endif %}>
                  <a href="{{ path('about') }}">About the project</a></li>
                <li{% if currentPath == category_path('behavioural science') %} class="active"{% endif %}>
                  <a href="{{ category_path('behavioural science') }}">Behavioural Science</a></li>
                <li{% if currentPath == category_path('computer science') %} class="active"{% endif %}>
                  <a href="{{ category_path('computer science') }}">Computer Science</a></li>
                <li{% if currentPath == category_path('system architecture')%} class="active"{% endif %}>
                  <a href="{{ category_path('system architecture') }}">System Architecture</a></li>
              </ul>
            </li>
            <li class="dropdown">
              <a href="#"
                 class="dropdown-toggle"
                 data-toggle="dropdown"
                 role="button"
                 aria-haspopup="true"
                 aria-expanded="false"
              >Who's Involved <span class="caret"></span></a>
              <ul class="dropdown-menu">
                <li{% if currentPath == path('grantholders') %} class="active"{% endif %}>
                  <a href="{{ path('grantholders') }}">Grant holders</a></li>
                <li{% if currentPath == path('projecteam') %} class="active"{% endif %}>
                  <a href="{{ path('projecteam') }}">Project team</a></li>
              </ul>
            </li>
            <li{% if currentPath == path('news') %} class="active"{% endif %}>
              <a href="{{ path('news') }}">Latest News</a>
            </li>
            <li{% if currentPath == path('contactus') %} class="active"{% endif %}>
              <a href="{{ path('contactus') }}">Contact Us</a>
            </li>
          </ul>
        </div>
      </div>
    </nav>
  </header>
  {% block body %}{% endblock %}
  <section class="block contact">
    <div class="container-fluid">
      <div class="row">
        <div class="col-md-6 text-left">
          <h4>Human Behaviour Change Project</h4>
          <p>
            Centre for Behaviour Change<br />
            University College London<br />
            1-19 Torrington Place, London, WC1E 7HB
          </p>
        </div>
        <div class="col-md-6 text-right">
          <ul>
            <li><a href="mailto:humanbehaviourchange@ucl.ac.uk">humanbehaviourchange@ucl.ac.uk</a></li>
            <li><a href="https://twitter.com/hbcproject" target="_blank" rel="noopener" class="twitter">@HBCProject</a></li>
            <li><a href="https://osf.io/efp4x/" target="_blank" rel="noopener" class="open-science">HBCP on Open Science</a></li>
          </ul>
          <a href="{{ path('contactus') }}" class="btn btn-small">Contact</a>
        </div>
      </div>
    </div>
  </section>
  <footer class="footer">
    <div class="container-fluid bottom-footer">
      <div class="row">
        <div class="col-md-3 text-left">&copy; {{ 'now'|date('Y') }} HBCP . <a href="{{ path('privacy') }}">Privacy Policy</a></div>
        <div class="col-md-6 text-center">
          <img src="{{ asset('bundles/app/images/home-sponsors.svg') }}" alt="HBCP Sponsor Logos" class="sponsor-logos" />
        </div>
        <div class="col-md-3 text-right">Site by <a href="https://www.britishwebsites.co.uk" target="_blank" rel="noopener">British Websites</a></div>
      </div>
    </div>
  </footer>
</div>
{% block javascript %}
<script src="{{ asset('build/global.scripts.js') }}" type="text/javascript"></script>
{% endblock %}
</body>
</html>
