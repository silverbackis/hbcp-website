{% extends 'adminlayout.html.twig' %}
{% block body %}
	<!-- Row -->
	<div class="row">
	<div class="col-sm-12">
	<div class="panel panel-default card-view">
		<div class="panel-heading">
			<div class="pull-left">
				<h6 class="panel-title txt-dark">Resource Type</h6>
			</div>
			<div class="pull-right">
				<a href="{{ path('admin_resource_type_item') }}"><button type="button" class="btn btn-success">Create New Resource Type</button></a>
			</div>
			<div class="clearfix"></div>
		</div>
		<div class="panel-wrapper collapse in">
			<div class="panel-body">
				<div class="table-wrap">
					<div class="table-responsive">
						<table id="datable_1" class="table table-hover display  pb-30" >
							<thead>
							<tr>
								<th>Name</th>
								<th>Created</th>
								<th>Modified</th>
								<th>Actions</th>
							</tr>
							</thead>

							<tfoot>
							<tr>
								<th>Name</th>
								<th>Created</th>
								<th>Modified</th>
								<th>Actions</th>
							</tr>
							</tfoot>
							<tbody>
              {% for resource_type in resources_types %}
								<tr>
									<td>{{ resource_type.name }}</td>
									<td>{{ resource_type.created |date("d/m/Y H:i") }} </td>
									<td>{{ resource_type.updated | date("d/m/Y H:i") }}</td>
									<td>
										<a href="{{ path('admin_resource_type_item', {resourceType: resource_type.id}) }}">
											<button class="btn btn-warning btn-icon-anim btn-circle">
												<i class="fa fa-pencil"></i>
											</button></a>

										<a class="confirmation" href ="{{ path('admin_resource_type_delete', {resourceType: resource_type.id}) }}"><button class="btn btn-danger btn-icon-anim btn-circle">
												<i class="icon-trash"></i>
											</button></a>
									</td>
								</tr>
              {% endfor %}
							</tbody>
						</table>
					</div>
				</div>
			</div>
		</div>
	</div>
	<!-- /Row -->
{% endblock %}