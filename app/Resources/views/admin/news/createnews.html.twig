{% extends "adminlayout.html.twig" %}
{% block body %}
  <div class="row">
    <div class="col-md-12">
      <div class="panel panel-default card-view">
        <div class="panel-heading">
          <div class="pull-left">
            <h6 class="panel-title txt-dark">{{ new ? 'Create' : 'Modify' }} News Post</h6>
          </div>
          <div class="clearfix"></div>
        </div>
        <div class="panel-wrapper collapse in">
          <div class="panel-body">
            <div class="row">
              <div class="col-md-12">
                <div class="form-wrap">
                  {{ form_start(form) }}
                  {{ form_row(form.name) }}
                  {{ form_row(form.author) }}
                  {{ form_row(form.newsContent) }}
                  {% if form.vars.value.imagePath %}
                    <div style="margin-top: 20px;">
                      <img src="{{ form.vars.value.imagePath }}" style="max-width: 200px; max-height: 200px;" />
                    </div>
                  {% endif %}
                  {{ form_row(form.image) }}
                  {{ form_row(form.imageCredit) }}
                  {{ form_end(form) }}
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
{% endblock %}