{% extends 'adminlayout.html.twig' %}
{% block body %}
<!-- Row -->
<div class="row">
	<div class="col-sm-12">
		<div class="panel panel-default card-view">
			<div class="panel-heading">
				<div class="pull-left">
					<h6 class="panel-title txt-dark">News</h6>
				</div>

				<div class="pull-right">
					<a href="{{ path('admin_news_item') }}"><button type="button" class="btn btn-success">Create News Post</button></a>
				</div>
				<div class="clearfix"></div>
			</div>
			<div class="panel-wrapper collapse in">
				<div class="panel-body">
					<div class="table-wrap">
						<div class="table-responsive">
							<table id="datable_1" class="table table-hover display  pb-30" >
								<thead>
								<tr>
									<th>Title</th>
									<th>Author</th>
									<th>Created</th>
									<th>Modified</th>
									<th>Imagepath</th>
									<th>Imagecredit</th>
									<th>Actions</th>
								</tr>
								</thead>
								<tfoot>
								<tr>
									<th>Title</th>
									<th>Author</th>
									<th>Created</th>
									<th>Modified</th>
									<th>Imagepath</th>
									<th>Imagecredit</th>
									<th>Actions</th>
								</tr>
								</tfoot>
								<tbody>
                {% for news_post in news_posts %}
									<tr>
										<td>{{ news_post.name }}</td>
										<td>{{ news_post.author }}</td>
										<td>{{ news_post.created |date("d/m/Y H:i") }} </td>
										<td>{{ news_post.updated | date("d/m/Y H:i") }}</td>
										<td>
                      {% if news_post.imagePath %}
												<img src="{{ news_post.imagePath }}"  width="50" height="50" />
                      {% else %}
												n/a
                      {%endif%}
										</td>
										<td>{{ news_post.imageCredit }}</td>
										<td>
											<a href="{{ path('admin_news_item', {news: news_post.id}) }}">
												<button class="btn btn-warning btn-icon-anim btn-circle">
													<i class="fa fa-pencil"></i>
												</button>
											</a>
											<a  class="confirmation" href ="{{ path('admin_news_delete', {news: news_post.id}) }}"><button class="btn btn-danger btn-icon-anim btn-circle">
													<i class="icon-trash"></i>
												</button>
											</a>
										</td>
									</tr>
                {% endfor %}
								</tbody>
							</table>
						</div>
					</div>
				</div>
			</div>
		</div>
		<!-- /Row -->

    {% endblock %}
