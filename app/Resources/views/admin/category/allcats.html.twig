{% extends 'adminlayout.html.twig' %}
{% block body %}

	<div class="row">
		<div class="col-sm-12">
			<div class="panel panel-default card-view">
				<div class="panel-heading">
					<div class="pull-left">
						<h6 class="panel-title txt-dark">Category</h6>
					</div>
					<div class="pull-right">
						<a href="{{ path('category_edit') }}"><button type="button" class="btn btn-success">Create a Category</button></a>
					</div>
					<div class="clearfix"></div>
				</div>
				<div class="panel-wrapper collapse in">
					<div class="panel-body">
						<div class="table-wrap">
							<div class="table-responsive">
								<table id="datable_1" class="table table-hover display  pb-30" >
									<thead>
										<tr>
											<th>Category Name</th>
											<th>Parent Category</th>
											<th>Created</th>
											<th>Modified</th>
											<th>Actions</th>
										</tr>
									</thead>
									<tfoot>
										<tr>
											<th>Category Name</th>
											<th>Parent Category</th>
											<th>Created</th>
											<th>Modified</th>
											<th>Actions</th>
										</tr>
									</tfoot>
									<tbody>
                  {% for category in categories %}
										<tr>
											<td>{{ category.name }}</td>
											<td>{{ category.breadcrumbs }}</td>
											<td>{{ category.created |date("d/m/Y H:i") }} </td>
											<td>{{ category.updated | date("d/m/Y H:i")  }}</td>
											<td>
												<a class="confirmation" href ="{{ path('category_delete', {category: category.id}) }}">
													<button class="btn btn-danger btn-icon-anim btn-circle">
														<i class="icon-trash"></i>
													</button>
												</a>
												<a href="{{ path('category_edit', {category: category.id}) }}">
													<button class="btn btn-warning btn-icon-anim btn-circle">
														<i class="fa fa-pencil"></i>
													</button>
												</a>
											</td>
										</tr>
                  {% endfor %}
									</tbody>
								</table>
							</div>
						</div>
					</div>
				</div>
			</div>
	<!-- /Row -->
{% endblock %}